    private void btnenterActionPerformed(java.awt.event.ActionEvent evt) {                                         
        //ENTER
        double mocha = 89;
        double matcha = 109;
        double velvet = 109;
        double pearls = 10;
        double cream = 20;
        double nata = 15;
        
        

        if (radmocha.isSelected()){
            subtotal = subtotal + mocha;
        }
        else if (radmatcha.isSelected()){
            subtotal = subtotal + matcha;
        }
        else if (radvelvet.isSelected()){
            subtotal = subtotal + velvet;
        }

        if (chkpearls.isSelected()){
            subtotal = subtotal + pearls;
        }
        if (chknata.isSelected()){
            subtotal = subtotal + nata;
        }
        if (chkcream.isSelected()){
            subtotal = subtotal + cream;
        }

        txttotal.setText(Double.toString(subtotal));
        subtotal = Double.parseDouble(txttotal.getText());
        

    }                                        

    private void radmochaActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
    }                                        

    private void txtpaymentActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
    }                                          

    private void btnpayActionPerformed(java.awt.event.ActionEvent evt) {                                       
        
        payment = Double.parseDouble(txtpayment.getText());
        change = payment - subtotal;
        
        txtpayment.setText(" " + payment);
        txtchange.setText(" " + change);
    }                                      

