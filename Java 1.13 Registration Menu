    private void chktermsActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        
        
    }                                        

    private void btnsubmitActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String gender = null;
        String first = txtfirst.getText();
        String middle = txtmiddle.getText();
        String last = txtlast.getText();
        String mobile = txtmobile.getText();
        int day = cboday.getSelectedIndex();
        int month = cbomonth.getSelectedIndex();
        int year = cboyear.getSelectedIndex();
        String address = txtaddress.getText();
        
        
        if (radmale.isSelected()){
        gender = "Gender: Male";
        }
        else if (radfemale.isSelected()){
        gender = "Gender: Female";
        }
        else {
        gender = "Please Select Your Gender";
        }
        
        txtanswer.setText(txtanswer.getText() + "Name: " + first + " " + middle + " "+ last + "\n");
        txtanswer.setText(txtanswer.getText()  + gender + "\n");
        txtanswer.setText(txtanswer.getText()  + "Date of Birth: " + month + day + year + "\n");
        txtanswer.setText(txtanswer.getText()  + "Address: " + address + "\n");
        
        if (chkterms.isSelected()){
        lblreg.setText("REGISTRATION STATUS: REGISTRATION SUCCESSFUL!");
        }
        else {
        lblreg.setText("REGISTRATION STATUS: PLEASE CHECK THE TERMS AND CONDITION");
        }
        
        
        
    }                                         

    private void btnresetActionPerformed(java.awt.event.ActionEvent evt) {                                         
        txtanswer.setText(null);
        txtfirst.setText(null);
        txtmiddle.setText(null);
        txtlast.setText(null);
        txtmobile.setText(null);
        cboday.setSelectedIndex(0);
        cbomonth.setSelectedIndex(0);
        cboyear.setSelectedIndex(0);
        chkterms.setSelected(false);
        buttonGroup1.clearSelection();
        txtaddress.setText(null);
    }                                        

