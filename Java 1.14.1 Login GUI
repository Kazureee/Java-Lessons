    private void txtusernameFocusGained(java.awt.event.FocusEvent evt) {                                        
        if (txtusername.getText().trim().equals("") || 
           txtusername.getText().trim().toLowerCase().equals("username")) {
        txtusername.setText(null);
        txtusername.setForeground(black);
        
        }
    }                                       

    private void txtusernameFocusLost(java.awt.event.FocusEvent evt) {                                      
        if(txtusername.getText().trim().equals("") || 
           txtusername.getText().trim().toLowerCase().equals("username"))
        {
            txtusername.setText("username");
            txtusername.setForeground(gray);
        }
    }                                     

    private void txtpasFocusGained(java.awt.event.FocusEvent evt) {                                   
        String pass = String.valueOf(txtpas.getPassword());
         if(pass.trim().equals("") || 
           pass.trim().toLowerCase().equals("password")){
         txtpas.setText(null);
         txtpas.setForeground(black);
         txtpas.setEchoChar('â€¢');
         }
    }                                  

    private void txtpasFocusLost(java.awt.event.FocusEvent evt) {                                 
        String pass = String.valueOf(txtpas.getPassword());
        if (txtpas.getText().length()==0){
        if (pass.trim().toLowerCase().equals("")){
        txtpas.setText("password");
        txtpas.setForeground(gray);
        txtpas.setEchoChar('\u0000');
        }
        }
    }                                

    private void btnloginActionPerformed(java.awt.event.ActionEvent evt) {                                         
    String[] Username = {"user01", "user02", "user03"};
    String[] Password = {"0001", "0002", "0003"};
    boolean sucess = false;
    
    for (int i = 0; i < Username.length; i++) {
            if (txtusername.getText().equals(Username[i]) && txtpas.getText().equals(Password[i])) {
                SuccessLog log = new SuccessLog();
                log.setVisible(true);
                sucess = true;
                this.dispose();
                break;
            }
        }
    if (!sucess) {
            JOptionPane.showMessageDialog(null, "Please enter the correct Username and Password");
        }
    }                                        

    private void btnsignupActionPerformed(java.awt.event.ActionEvent evt) {                                          
    Signup signup = new Signup();
    signup.setVisible(true);
    this.dispose();
    }                                         

