    }                                         

    private void txtUserActionPerformed(java.awt.event.ActionEvent evt) {                                        

    }                                       

    private void txtUserFocusGained(java.awt.event.FocusEvent evt) {                                    
         if(txtUser2.getText().trim().toLowerCase().equals("username"))
        {
            txtUser2.setText("");
            txtUser2.setForeground(Color.black);
        }
    }                                   

    private void txtUser2FocusLost(java.awt.event.FocusEvent evt) {                                   
           if(txtUser2.getText().trim().equals("") || 
           txtUser2.getText().trim().toLowerCase().equals("username"))
        {
            txtUser2.setText("username");
            txtUser2.setForeground(new Color(204,204,204));
        }
    }                                  

    private void txtpasFocusGained(java.awt.event.FocusEvent evt) {                                   
        String pass = String.valueOf(txtpas.getPassword());
        if (txtpas.getText().equals("password")){
        if(pass.trim().toLowerCase().equals("password"))
        {
            txtpas.setText(null);
            txtpas.setForeground(Color.black);
            txtpas.setEchoChar('*');
        }
        }
    }                                  

    private void txtpasFocusLost(java.awt.event.FocusEvent evt) {                                 
        String pass = String.valueOf(txtpas.getPassword());
        if (txtpas.getText().length()==0){
        if(pass.trim().equals("") || 
           pass.trim().toLowerCase().equals("password"))
        {
            txtpas.setText("password");
            txtpas.setEchoChar('\u0000');
            txtpas.setForeground(new Color(204,204,204));
        }
        }
    }                                

    private void formWindowGainedFocus(java.awt.event.WindowEvent evt) {                                       
        this.requestFocusInWindow();
    }                                      

    private void btnLogin2ActionPerformed(java.awt.event.ActionEvent evt) {                                          
    String[] Username = {"user01", "user02", "user03"};
    String[] Password = {"0001", "0002", "0003"};
    boolean success = false;
    
        for (int i = 0; i < Username.length; i++) {
            if (txtUser2.getText().equals(Username[i]) && txtpas.getText().equals(Password[i])) {
                SuccessLog log = new SuccessLog();
                log.setVisible(true);
                success = true;
                this.dispose();
                break;
            }
        }

        if (!success) {
            JOptionPane.showMessageDialog(null, "Please enter the correct Username and Password");
        }
    }                                         

